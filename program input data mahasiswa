#include <iostream>
#include <string>

using namespace std;

int main(){
    string nama;
    string kelas;
    string nim;
    string jurusan;
    
    cout<<"masukan data berikut: "<<endl;
    
    cout<<"Masukan Nama: ";
    getline(cin,nama); 
    
    cout<<"Masukan kelas: ";
    getline(cin,kelas); 
    
    cout<<"Masukan NIM: ";
    getline(cin,nim); 
    
    cout<<"Masukan Jurusan:";
    getline (cin,jurusan); 


    cout << endl; 
    
    
    cout << "DATA MAHASISWA" << endl;
    cout << "---------------" << endl;
    
    cout << "Nama     : "<<nama<<endl;
    cout << "kelas    : "<<kelas<<endl;
    cout << "NIM      : "<<nim<<endl;
    cout << "Jurusan  : "<<jurusan<<endl;
          
          
      }
    
